---
import '../styles/global.css';
import SEO from '../components/SEO.astro';

export interface Props {
  class?: string;
  seo?: {
    title?: string;
    description?: string;
    canonical?: string;
    openGraph?: {
      title?: string;
      description?: string;
      image?: string;
      type?: string;
    };
    noIndex?: boolean;
    noFollow?: boolean;
    keywords?: string[];
  };
}

const { class: className, seo } = Astro.props;

// Favicon configuration - using static files for better Google indexing
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <SEO {...seo} />
    
    <!-- Primary favicon for Google and modern browsers -->
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    
    <!-- Apple touch icon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- Web app manifest for PWA and Google indexing -->
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#1f2937" />
    
    <meta name="google-site-verification" content="gBjZhuFwfuSu52WiwXxR7QGjuKSJydTs45TL6T7J3h0" />
  </head>
  <body class={`min-h-screen flex flex-col ${className || ''}`}>
    <slot />
  </body>
</html>
