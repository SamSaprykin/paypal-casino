---
import '../styles/global.css';
import SEO from '../components/SEO.astro';

export interface Props {
  class?: string;
  seo?: {
    title?: string;
    description?: string;
    canonical?: string;
    openGraph?: {
      title?: string;
      description?: string;
      image?: string;
      type?: string;
    };
    noIndex?: boolean;
    noFollow?: boolean;
    keywords?: string[];
  };
}

const { class: className, seo } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <SEO {...seo} />
  </head>
  <body class={`min-h-screen flex flex-col ${className || ''}`}>
    <slot />
  </body>
</html>
