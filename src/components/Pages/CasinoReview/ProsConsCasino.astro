---
import { Check, X } from "@lucide/astro";

interface CasinoProsAndConsProps {
  casinoName?: string;
  customData?: {
    fields: {
      overviewType: string;
      title: string;
    };
  }[] | null;
}

const {
  casinoName,
  customData,
} = Astro.props as CasinoProsAndConsProps;

const data = customData || [];
const lastUpdated = new Date().toLocaleDateString();

const pros = data.filter((item) => item.fields.overviewType === "Pros");
const cons = data.filter((item) => item.fields.overviewType === "Cons");

---

<div class="px-4 lg:px-0">
  <div class="flex flex-col gap-4 py-8 lg:py-12 w-full max-w-5xl mx-auto">
    <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden container mx-auto mt-8">
      <div class="px-4 lg:px-8 py-4 lg:py-6 border-b border-gray-200">
        <h2 class="text-3xl font-bold text-gray-900 text-center">
          {casinoName} - Pros & Cons
        </h2>
        <p class="text-gray-600 text-center mt-2">
          Our expert analysis of the key advantages and disadvantages
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-0">
        <!-- Pros Section -->
        <div class="p-4 lg:p-8 flex flex-col justify-between">
          <div>
            <div class="flex items-center gap-3 mb-6">
              <h3 class="text-2xl font-bold text-gray-900">Pros</h3>
            </div>

            <ul class="space-y-4">
              {pros.map((prosItem) => (
                <li class="flex items-start gap-2">
                  <div class="w-5 h-5 bg-blue-500 rounded-full flex items-center justify-center mt-0.5 flex-shrink-0">
                    <Check class="w-3 h-3 text-white" />
                  </div>
                  <span class="text-gray-700 leading-relaxed">{prosItem.fields.title}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-6 p-4 bg-blue-100 rounded-lg border border-blue-200">
            <p class="text-sm text-blue-800 font-medium">
              ✨ Overall Rating: Excellent choice for most players
            </p>
          </div>
        </div>

        <!-- Cons Section -->
        <div class="p-4 lg:p-8 border-l border-gray-200 flex flex-col justify-between">
          <div>
            <div class="flex items-center gap-3 mb-6">
              <h3 class="text-2xl font-bold text-gray-900">Cons</h3>
            </div>

            <ul class="space-y-4">
              {cons.map((consItem) => (
                <li class="flex items-start gap-3 group">
                  <div class="w-5 h-5 bg-gray-500 rounded-full flex items-center justify-center mt-0.5 flex-shrink-0">
                    <X class="w-3 h-3 text-white" />
                  </div>
                  <span class="text-gray-700 leading-relaxed">{consItem.fields.title}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="mt-6 p-4 bg-gray-100 rounded-lg border border-gray-200">
            <p class="text-sm text-gray-800 font-medium">
              ⚠️ Consider these factors before signing up
            </p>
          </div>
        </div>
      </div>

      <!-- Bottom Summary -->
      <div class="bg-gray-50 px-8 py-6 border-t border-gray-200">
        <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
          <div class="text-center sm:text-left">
            <p class="text-sm text-gray-600">
              Based on our comprehensive review of {casinoName}
            </p>
            <p class="text-xs text-gray-500 mt-1">Last updated: {lastUpdated}</p>
          </div>

          <div class="flex items-center gap-4">
            <div class="text-center">
              <div class="text-2xl font-bold text-blue-600">
                {pros.length}
              </div>
              <div class="text-xs text-gray-500">Pros</div>
            </div>
            <div class="w-px h-8 bg-gray-300"></div>
            <div class="text-center">
              <div class="text-2xl font-bold text-gray-600">
                {cons.length}
              </div>
              <div class="text-xs text-gray-500">Cons</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
