---
import { Star, Trophy, ExternalLink, Sparkles, ArrowRight, CheckCircle } from "@lucide/astro";
import CustomButton from "../../components/Atoms/Button.astro";
import { addHttps } from "../../lib/helpers";

const { title, gameDescription, gameName, casinoLinks, image, link } = Astro.props;

const game = {
  rating: 4.8,
  features: [
    "Wild Symbols",
    "Free Spins",
    "Bonus Rounds",
    "Progressive Jackpot",
  ],
};
---

<div class="bg-gradient-to-br from-blue-50 via-blue-100 to-blue-200 flex items-center justify-center p-4 py-24">
  <div class="max-w-6xl w-full group">
    <!-- Main Card -->
    <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-blue-100">
      
      <!-- Header Badge -->
      <div class="relative">
        <div class="absolute top-4 left-4 z-10">
          <div class="bg-gradient-to-r from-blue-900 to-blue-700 text-white px-3 py-1.5 rounded-full text-xs font-bold flex items-center gap-1 shadow-lg">
            <Trophy class="w-3 h-3" />
            GAME OF THE MONTH
          </div>
        </div>

        <div class="relative h-48 overflow-hidden group-hover:h-80 transition-all duration-300">
          <img src={addHttps(image.fields.file.url)} alt={gameName} class="w-full h-full object-cover" />
          <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
        </div>
      </div>

      <div class="p-6">
        <div class="grid md:grid-cols-2 gap-8">
          <!-- Left Column - Main Info -->
          <div class="space-y-6">
            <!-- Title and Rating -->
            <div class="text-center md:text-left space-y-3">
              <h2 class="text-2xl font-bold text-gray-900 leading-tight">{title}</h2>
              <div class="flex items-center justify-center md:justify-start gap-2">
                <div class="flex items-center gap-1">
                  {Array.from({ length: 5 }).map((_, i) => (
                    <Star
                      class={`w-4 h-4 ${i < Math.floor(game.rating) ? "text-blue-400 fill-current" : "text-gray-300"}`}
                    />
                  ))}
                </div>
                <span class="text-sm font-semibold text-gray-700">{game.rating}</span>
              </div>
            </div>

            <!-- Description -->
            <p class="text-gray-600 text-sm leading-relaxed text-center md:text-left">
              {gameDescription}
            </p>

            <!-- Features -->
            <div class="space-y-3">
              <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                <Sparkles class="w-4 h-4 text-blue-500" /> Key Features
              </h3>
              <div class="grid grid-cols-2 gap-2">
                {game.features.map((feature) => (
                  <div class="bg-blue-50 text-blue-700 px-3 py-2 rounded-lg text-xs font-medium text-center border border-blue-100 flex items-center gap-2">
                    <CheckCircle class="w-4 h-4 text-blue-500" /> {feature}
                  </div>
                ))}
              </div>
            </div>
          </div>

          <!-- Right Column - Actions -->
          <div class="space-y-6">
            <!-- Action Button -->
            <div class="flex justify-center">
              <CustomButton
                variant="primary"
                buttonType="internal-link"
                href={link}
                size="lg"
                className="w-full group shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300"
               
              >
                <span class="cta-text text-md">Play Now</span>
                <ArrowRight class="w-4 h-4 ml-1 transform transition-all duration-300 group-hover:translate-x-1" />
              </CustomButton>
            </div>

            <!-- Casino Links -->
            <div class="space-y-3">
              <h3 class="text-sm font-semibold text-gray-800 text-center">
                Available at these casinos:
              </h3>
              <div class="space-y-2">
                {casinoLinks.map((casino) => (
                  <a
                    href={`/casino-guide${casino.fields.url}`}
                    class="flex items-center justify-between p-3 bg-gray-50 hover:bg-blue-50 rounded-xl transition-colors duration-200 group border border-gray-100 hover:border-blue-200"
                  >
                    <div class="flex flex-col">
                      <span class="text-sm font-medium text-gray-900 group-hover:text-blue-700">
                        {casino.fields.copy}
                      </span>
                    </div>
                    <ExternalLink class="w-4 h-4 text-gray-400 group-hover:text-blue-500 transition-colors" />
                  </a>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
