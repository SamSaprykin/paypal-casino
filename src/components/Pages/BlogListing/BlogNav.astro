---
import CustomButton from "../../../components/Atoms/Button.astro"; 
import { slugify } from "../../../lib/helpers";

const { categories = [], activeCategory = "All" } = Astro.props;



const displayCategories = categories.length > 0 ? categories : []
---

<div class="bg-white border-b border-yellow-200 shadow-sm px-4 lg:px-0">
  <div class="max-w-7xl mx-auto">
    <div class="py-6">
      <!-- Header -->
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4 mb-6">
        <div>
          <h2 class="text-2xl font-bold text-blue-800">Casino Blog</h2>
          <p class="text-gray-600 mt-1">
            Expert insights and guides for Bitcoin casino players
          </p>
        </div>
      </div>

      <!-- Categories -->
      <div class="flex flex-wrap gap-3">
        {displayCategories.map((category) => {
          const isActive = activeCategory === category.name;
          return (
            <CustomButton
              variant={isActive ? "primary" : "outline"}
              size="sm"
              buttonType="internal-link"
              href={category.name === "All" ? "/blog" : `/blog/${slugify(category.name)}`}
              className="flex items-center gap-2 whitespace-nowrap hover:cursor-pointer px-6"
            >
              <span>{category.name}</span>
              <span
                class={`text-xs px-2 py-0.5 rounded-full ${
                  isActive ? "bg-white/20 text-white" : "bg-blue-100 text-gray-700"
                }`}
              >
                {category.count}
              </span>
            </CustomButton>
          );
        })}
      </div>
    </div>
  </div>
</div>
