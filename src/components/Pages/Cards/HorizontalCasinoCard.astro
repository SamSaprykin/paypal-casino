---
import { Star, ArrowRight, ExternalLink } from "@lucide/astro";
import CustomButton from "../../../components/Atoms/Button.astro";
import { addHttps } from "../../../lib/helpers";
import { Image } from "astro:assets";

const { casino, cardBackgroundColor, firstRate } = Astro.props;
---

<div class="relative bg-white rounded-lg shadow-md transition-all duration-300 transform hover:-translate-y-1 overflow-hidden border border-gray-200 flex flex-row items-stretch">
  <!-- Logo Section -->
  <div
    class="flex-shrink-0 w-48 min-w-48 flex items-center justify-center p-4 relative"
    style={`background-color:${cardBackgroundColor}`}
  >
    <div class="relative z-10">
      <Image
        src={addHttps(casino.fields.bonusLogo.fields.file.url)}
        alt={casino.fields.bonusLogo.fields.file.title || "Bonus logo"}
        width={casino.fields.bonusLogo.fields.file.details.image.width || 120}
        height={casino.fields.bonusLogo.fields.file.details.image.height || 60}
        class="rounded-md object-contain max-w-[75%] max-h-full mx-auto"
        loading="lazy"
      />
    </div>
  </div>

  <!-- Main Content -->
  <div class="flex-1 flex flex-col justify-between p-4 min-w-0">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-start sm:justify-between gap-2 mb-3">
      <div class="flex flex-col">
        <h3 class="text-xl font-semibold text-gray-900 mb-1">
          {casino.fields.casinoName}
        </h3>
        <div class="flex items-center gap-3">
          <div class="flex items-center bg-gray-200 rounded-full px-2 py-1">
            <Star class="w-3 h-3 fill-yellow-400 text-yellow-400 mr-1" />
            <span class="text-xs font-medium">
              {firstRate.fields.ratingNumber || "4.7"}/5
            </span>
          </div>
          {casino.reviewUrl && (
            <a
              href={casino.reviewUrl}
              class="text-xs text-yellow-700 hover:text-yellow-800 flex items-center gap-1 transition-colors"
            >
              Read Review
              <ExternalLink class="w-3 h-3" />
            </a>
          )}
        </div>
      </div>
    </div>

    <!-- Bonus Section -->
    <div class="bg-gray-50 rounded-lg p-3 border border-gray-200 mb-3">
      <p class="text-xs text-gray-600 font-bold mb-1 uppercase tracking-wide">
        Welcome Bonus
      </p>
      <p class="text-gray-800 font-bold text-sm">
        {casino.fields.bonus || "100% Bonus Up To 1 BTC + 10% Weekly Cashback"}
      </p>
    </div>

    <!-- Key Features -->
    {casino.features && (
      <ul class="text-sm text-gray-600 space-y-1 mb-3 flex gap-2 flex-wrap">
        {casino.features.slice(0, 3).map((feature, index) => (
          <li
            class="flex items-center rounded-sm bg-yellow-200 px-3 py-1 h-[32px] text-sm"
          >
            <span class="text-yellow-500 mr-2 flex-shrink-0">â€¢</span>
            <span class="line-clamp-1">{feature}</span>
          </li>
        ))}
      </ul>
    )}
  </div>

  <!-- CTA Section -->
  <div class="flex-shrink-0 w-48 min-w-48 flex flex-col justify-center p-4 border-l border-gray-100">
    <CustomButton
      variant="primary"
      size="lg"
      class="w-full group text-sm"
      buttonType="external-ref-link"
      refLink={casino.fields.referralUrl}
    >
      <span class="cta-text text-md">Play Now</span>
      <ArrowRight class="w-4 h-4 ml-1 transform transition-all duration-300 group-hover:translate-x-1" />
    </CustomButton>
     
  </div>
</div>
