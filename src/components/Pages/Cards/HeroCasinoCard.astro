---
import { Star, ArrowRight } from "@lucide/astro";
import CustomButton from "../../../components/Atoms/Button.astro";
import { addHttps } from "../../../lib/helpers";
import { Image } from "astro:assets";

const { casino } = Astro.props;


---

<div class="relative bg-white rounded-lg shadow-md transition-all duration-300 transform hover:-translate-y-1 border border-gray-200 flex flex-col items-center">
  <!-- Header with minimal background -->
  <div class="bg-gray-100 p-4 text-gray-900 relative w-full flex flex-col items-center">
    <div
      class="bg-white p-1 rounded-lg shadow-sm mb-2 -mt-8"
      style={`background-color:${casino?.fields?.backgroundColor}`}
    >
      <Image
        src={addHttps(casino?.fields?.logo?.fields?.file?.url) || "/placeholder.svg"}
        alt={`${casino?.fields?.casinoName} logo`}
        width="50"
        height="50"
        class="rounded-md w-32 h-32 object-contain"
        loading="lazy"
      />
    </div>
    <h2 class="text-2xl font-semibold mb-1 text-center text-gray-900">
      <a
        href={`/casino-guide/${casino?.fields?.slug}/`}
        class="hover:text-yellow-700 transition-colors duration-300"
      >
        {casino?.fields?.casinoName}
      </a>
    </h2>
    <div class="flex items-center bg-gray-200 rounded-full px-2 py-1 mb-2">
      <Star class="w-3 h-3 fill-yellow-400 text-yellow-400 mr-1" />
      <span class="text-sm font-semibold">
        {casino?.fields?.casinoRates[0]?.fields?.ratingNumber}/5
      </span>
    </div>
  </div>

  <!-- Card Content -->
  <div class="p-4 text-center w-full">
    <p class="text-gray-700 text-sm mb-3 line-clamp-2">
      {casino?.fields?.shortDescription}
    </p>

    <!-- Bonus Section -->
    <div class="bg-gray-50 rounded-lg p-3 mb-4 border border-gray-200">
      <p class="text-xs text-gray-600 font-bold mb-1 uppercase tracking-wide">
        {casino?.fields?.bonuses[0]?.fields?.code}
      </p>
      <p class="text-gray-800 font-bold text-base">
        {casino?.fields?.bonuses[0]?.fields?.description}
      </p>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col gap-2 w-full">
      <CustomButton
        variant="primary"
        size="lg"
        className="w-full group"
        buttonType="external-ref-link"
        refLink={casino?.fields?.referralUrl}
        
      >
        <span class="cta-text text-md">Play Now</span>
        <ArrowRight class="w-4 h-4 ml-2 transform transition-all duration-300 group-hover:ml-4 group-hover:text-gray-600 rounded-full group-hover:bg-blue-100" />
      </CustomButton>
     

      <CustomButton
        variant="outline"
        size="md"
        className="w-full"
        buttonType="internal-link"
        href={`/casino-guide/${casino?.fields?.slug}/`}
      
      >
        <span class="cta-text text-md">Read Review</span>
     
      </CustomButton>
      
     
    </div>
  </div>
</div>
</div>