---
import { Star, ArrowRight, ChevronDown, Globe, Clock, Users, CreditCard } from "@lucide/astro";
import CustomButton from "../../../components/Atoms/Button.astro";
import { addHttps } from "../../../lib/helpers";
import { Image } from "astro:assets";

const { casino } = Astro.props;

const firstBonus = casino.fields?.bonuses ? casino.fields?.bonuses[0] : null;

const recommendationPercentage = Math.round(
  (casino.fields.userRecommendationsRecommendedNumber /
    casino.fields.userRecommendationsTotalNumber) *
    100
);

---

<div
  class="casino-card bg-white transition-[max-height] duration-500 rounded-lg shadow-md border border-gray-200 overflow-hidden hover:shadow-lg"
>
  <!-- Main horizontal layout -->
  <div class="main-row flex items-center justify-between h-[180px] lg:h-[140px]">
    <!-- 1. Logo + Casino Name Column -->
    <div class="flex flex-col p-2 lg:p-0 w-1/2 lg:w-auto">
      <div
        class="flex flex-col items-center justify-center p-4 border border-gray-200 rounded-md mx-4 my-2 min-w-[110px] lg:min-w-[160px]"
        style={`background-color:${casino.fields.backgroundColor}`}
      >
        <a
          href={`/casino-guide/${casino.fields.slug}/`}
          class="mb-2 h-[40px] w-[80px] flex items-center justify-center group hover:cursor-pointer"
        >
          <Image
            src={addHttps(casino.fields.logo.fields.file.url) || "/placeholder.svg"}
            alt={`${casino.fields.casinoName} logo`}
            width="90"
            height="50"
            format="webp"
            class="rounded-md object-contain"
            loading="lazy"
          />
        </a>
        <a
          href={`/casino-guide/${casino.fields.slug}`}
          class="text-md font-semibold text-center text-gray-100 hover:text-gray-50 transition-colors duration-300"
        >
          {casino.fields.casinoName}
        </a>
      </div>
      <div class="flex items-center justify-center bg-blue-100 rounded-full px-3 py-2 mb-1 max-w-2/3 mx-auto lg:hidden">
        <Star class="w-4 h-4 fill-blue-500 text-blue-500 mr-1" />
        <span class="text-sm font-bold">
          {casino.fields.casinoRates[0].fields.ratingNumber}/5
        </span>
      </div>
    </div>

    <!-- 2. Rating Column -->
    <div class="flex-col items-center justify-center lg:px-4 lg:min-w-[100px] hidden lg:flex">
      <div class="flex items-center bg-blue-100 rounded-full px-3 py-2 mb-1">
        <Star class="w-4 h-4 fill-yellow-500 text-yellow-500 mr-1" />
        <span class="text-sm font-bold">
          {casino.fields.casinoRates[0].fields.ratingNumber}/5
        </span>
      </div>
      <span class="text-xs text-blue-700 font-semibold">Rating</span>
    </div>

    <!-- 3. Bonus Info + Description Column -->
    <div class="flex-1 px-4 hidden lg:block">
      <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg p-3 border border-blue-200">
        <p class="text-xs text-blue-700 font-bold mb-1 uppercase tracking-wide">
          {firstBonus?.fields?.code || "Welcome Bonus"}
        </p>
        <p class="text-blue-950 font-bold text-sm">
          {firstBonus?.fields?.description || "Up to €1000 + 100 Free Spins"}
        </p>
      </div>
    </div>

    <!-- 4. Casino Short Description Column -->
    <div class="px-4 max-w-[360px] hidden lg:block">
      <p class="text-sm text-blue-900 leading-relaxed">
        {casino.fields.shortDescription ||
          "Experience premium gaming with top-rated slots, live dealers, and instant payouts. Join thousands of satisfied players today."}
      </p>
    </div>

    <!-- 5. Buttons Column -->
    <div class="flex flex-col justify-center gap-2 border-l border-gray-200 min-w-1/2 lg:min-w-[220px] h-full">
      <div class="flex flex-col gap-2 p-4">
        <CustomButton
          variant="primary"
          className="cta-btn w-full group min-h-[40px] font-semibold text-md"
          buttonType="external-ref-link"
          refLink={casino.fields.referralUrl}
        >
          <span class="cta-text text-md">Play Now</span>
          <ArrowRight class="w-4 h-4 ml-1 transform transition-all duration-300 group-hover:translate-x-1" />
        </CustomButton>

        <div class="pt-2">
          <button
            class="toggle-btn min-h-[40px] w-full flex items-center justify-center gap-1 px-3 py-2 text-blue-700 hover:text-blue-900 bg-blue-100 hover:bg-blue-200 rounded-md transition-colors duration-200 font-semibold text-md hover:cursor-pointer"
          >
            Show More
            <ChevronDown class="chevron w-4 h-4" />
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Expandable Additional Information -->
  <div class="extra border-t border-gray-200 bg-blue-50 p-4 opacity-0 max-h-0 overflow-hidden transition-all duration-500">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6">
      {casino.fields.availableInCountries && (
        <div class="space-y-2">
          <div class="flex items-center gap-2">
            <Globe class="w-4 h-4 text-blue-600" />
            <div class="text-sm font-semibold text-blue-900">Available In:</div>
          </div>
          <div class="flex flex-wrap gap-1">
            {casino.fields.availableInCountries.map((country) => (
              <span class="text-sm bg-blue-100 text-blue-800 px-2 py-1 rounded-full">
                {country}
              </span>
            ))}
          </div>
        </div>
      )}

      <div class="flex-1 block lg:hidden">
        <div class="bg-gradient-to-r from-blue-50 to-blue-100 rounded-lg p-3 border border-blue-200">
          <p class="text-xs text-blue-700 font-bold mb-1 uppercase tracking-wide">
            {firstBonus?.fields?.code || "Welcome Bonus"}
          </p>
          <p class="text-blue-900 font-bold text-sm">
            {firstBonus?.fields?.description || "Up to €1000 + 100 Free Spins"}
          </p>
        </div>
      </div>

      <div class="space-y-2 flex flex-col items-start lg:px-6">
        <div class="flex items-center gap-2">
          <CreditCard class="w-4 h-4 text-blue-900" />
          <div class="text-sm font-semibold text-blue-900">Payout Limits</div>
        </div>
        <p class="text-xs text-blue-700">{casino.fields.payoutLimits}</p>
      </div>

      {casino.fields.payoutTimes && (
        <div class="space-y-2 flex flex-col items-start px-0">
          <div class="flex items-center gap-2">
            <Clock class="w-4 h-4 text-blue-900" />
            <div class="text-sm font-semibold text-blue-900">Payout Times</div>
          </div>
          <div class="space-y-1">
            {casino.fields.payoutTimes.map((time) => (
              <p class="text-xs text-blue-700">{time}</p>
            ))}
          </div>
        </div>
      )}

      <div class="w-full max-w-[360px] block lg:hidden font-semibold">
        <h3 class="text-sm text-blue-900 leading-relaxed">
          {casino.fields.shortDescription ||
            "Experience premium gaming with top-rated slots, live dealers, and instant payouts. Join thousands of satisfied players today."}
        </h3>
      </div>

      <div class="space-y-2 flex flex-col border border-blue-50 bg-blue-50 rounded-lg py-4 lg:p-0 lg:border-none lg:bg-transparent">
        <div class="flex items-center gap-2">
          <Users class="w-4 h-4 text-blue-900" />
          <div class="text-sm font-semibold text-blue-900">User Reviews</div>
        </div>
        <div class="space-y-1">
          <p class="text-xs text-blue-700">
            <span class="font-semibold text-blue-600">
              {casino.fields.userRecommendationsRecommendedNumber}
            </span>{" "}
            of{" "}
            <span class="font-semibold">
              {casino.fields.userRecommendationsTotalNumber}
            </span>{" "}
            recommend
          </p>
          <div class="w-full bg-blue-200 rounded-full h-2">
            <div
              class="bg-blue-500 h-2 rounded-full transition-all duration-300 max-w-[100%]"
              style={`width:${recommendationPercentage}%`}
            ></div>
          </div>
          <p class="text-xs text-blue-600 font-semibold">
            {recommendationPercentage}% positive reviews from our users
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    // Select all casino cards
    const cards = document.querySelectorAll(".casino-card");

    cards.forEach((card) => {
      const btn = card.querySelector(".toggle-btn");
      const chevron = card.querySelector(".chevron");
      const extra = card.querySelector(".extra");
      const mainRow = card.querySelector(".main-row");

      if (!btn || !extra || !mainRow) return;

      // Set initial collapsed height
      const baseHeight = mainRow.offsetHeight;
      card.style.maxHeight = baseHeight + "px";

      btn.addEventListener("click", () => {
        const isOpen = extra.classList.contains("open");

        if (isOpen) {
          extra.classList.remove("open");
          extra.style.maxHeight = "0";
          extra.style.opacity = "0";
          card.style.maxHeight = baseHeight + "px";
          chevron && chevron.classList.remove("rotate-180");
        } else {
          extra.classList.add("open");
          extra.style.maxHeight = extra.scrollHeight + "px";
          extra.style.opacity = "1";
          card.style.maxHeight = baseHeight + extra.scrollHeight + "px";
          chevron && chevron.classList.add("rotate-180");
        }
      });
    });

    // Optional: CTA hover effect
    const ctas = document.querySelectorAll(".cta-btn");
    ctas.forEach((cta) => {
      const ctaText = cta.querySelector(".cta-text");
      if (!ctaText) return;

      cta.addEventListener("mouseenter", () => (ctaText.textContent = "Get Bonus"));
      cta.addEventListener("mouseleave", () => (ctaText.textContent = "Play Now"));
    });
  });
</script>
