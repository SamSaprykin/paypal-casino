---
import { Shield, UserPlus, Bitcoin, Gamepad2, Wallet } from "@lucide/astro";
import PayPal from "../Layout/Logo.astro";
const { title, howToItems } = Astro.props;

const IconsMap = {
  Shield,
  UserPlus,
  Bitcoin,
  Gamepad2,
  Wallet,
  PayPal,
};
---

<div class="space-y-8 py-12 bg-gradient-to-br from-blue-50 to-blue-100 px-4">
  <div class="text-center space-y-4">
    <h2 class="text-4xl font-bold text-gray-900 font-sans">{title}</h2>
    <div class="w-24 h-1 bg-gradient-to-r from-blue-500 to-blue-700 mx-auto rounded-full"></div>
  </div>

  <div class="flex flex-col md:flex-row justify-center items-stretch gap-6 flex-wrap w-full max-w-7xl mx-auto">
    {howToItems.map((step) => {
      const IconComponent = IconsMap[step.fields.iconName];
      if (!IconComponent) return null;
  
      return (
        <div class="w-full md:w-56 lg:min-h-96 border-2 border-blue-100 shadow-lg flex-shrink-0 bg-white rounded-lg">
          <div class="p-4 h-full flex flex-col">
            <div class="text-center space-y-3 flex-1 flex flex-col">
              <div class="flex flex-col items-center gap-2">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-700 rounded-full flex items-center justify-center shadow-lg">
                  <IconComponent class="w-6 h-6 text-white" />
                </div>
              </div>
  
              <h3 class="text-lg font-semibold text-gray-900 font-sans leading-tight">
                {step.fields.title}
              </h3>
  
              <ul class="space-y-2 text-left flex-1">
                {step.fields.steps.map((item) => (
                  <li class="flex items-start gap-2 text-gray-700 text-sm leading-relaxed">
                    <div class="w-1.5 h-1.5 bg-blue-400 rounded-full mt-2 flex-shrink-0"></div>
                    <span>{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          </div>
        </div>
      );
    })}
  </div>
</div>
