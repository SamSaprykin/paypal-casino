---
import { cn } from "../../lib/utils";

const baseStyles =
  "inline-flex items-center justify-center font-medium rounded-lg transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 disabled:opacity-50 disabled:cursor-not-allowed hover:cursor-pointer text-sm md:text-base";

const variants = {
  primary:
    "bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white shadow-lg hover:shadow-xl focus:ring-blue-500",
  outline:
    "border-2 border-blue-500 text-blue-700 hover:bg-blue-500 hover:text-white focus:ring-blue-500",
  secondary:
    "bg-gray-800 text-blue-500 hover:bg-gray-700 focus:ring-gray-600",
};

const sizes = {
  sm: "px-2.5 py-1",
  md: "px-3 py-1.5",
  lg: "px-6 py-2.5",
};

const {
  variant = "primary",
  size = "md",
  className = "",
  buttonType = "button",
  href = "",
  refLink,
} = Astro.props;

const classes = cn(baseStyles, variants[variant], sizes[size], className);
---

{buttonType === "button" && (
  <button class={classes}>
    <slot />
  </button>
)}

{buttonType === "internal-link" && (
  <a href={href || "#"} class={classes}>
    <slot />
  </a>
)}

{buttonType === "external-default" && (
  <a
    href={href || "#"}
    target="_blank"
    rel="noopener noreferrer"
    class={classes}
  >
    <slot />
  </a>
)}

{buttonType === "external-ref-link" && (
  <a
    class={classes}
    data-ref-link={refLink}
    href={refLink}
    target="_blank"
    rel="noopener noreferrer"

  >
    <slot />
  </a>
)}
