---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import RichText from '../../components/RichText.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getBlogPostBySlug, getBlogPosts } from '../../lib/contentful';
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const posts = await getBlogPosts(100);
  
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { slug } = Astro.params;
const { post } = Astro.props;

// If post is not found, return 404
if (!post) {
  return Astro.redirect('/404');
}

// Get related posts (same tags, excluding current post)
const allPosts = await getBlogPosts(20);
const relatedPosts = allPosts
  .filter((p) => p.id !== post.id)
  .slice(0, 3);

const meta = {
  title: `${post.title} - Blog`,
  description: post.excerpt,
  type: 'article' as const,
  image: post.featuredImage?.fields.file.url,
  publishedTime: post.publishedDate,
  modifiedTime: post.updatedAt,
  author: post.author?.name,
};

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": post.title,
  "description": post.excerpt,
  "image": post.featuredImage?.fields.file.url,
  "datePublished": post.publishedDate,
  "dateModified": post.updatedAt,
  "author": {
    "@type": "Person",
    "name": post.author?.name || "Anonymous",
    ...(post.author?.bio && { "description": post.author.bio }),
    ...(post.author?.avatar && { "image": post.author.avatar.fields.file.url })
  },
  "publisher": {
    "@type": "Organization",
    "name": "Astro Starter",
    "logo": {
      "@type": "ImageObject",
      "url": `${Astro.site}favicon.svg`
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `${Astro.site}blog/${post.slug}`
  }
};
---

<BaseLayout meta={meta}>
  <Header />
  
  <main class="flex-1">
    <!-- Article Header -->
    <article class="section-padding">
      <div class="container-custom">
        <div class="max-w-4xl mx-auto">
          <!-- Breadcrumb -->
          <nav class="flex items-center space-x-2 text-sm text-secondary-500 mb-8">
            <a href="/" class="hover:text-secondary-700">Home</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <a href="/blog" class="hover:text-secondary-700">Blog</a>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
            <span class="text-secondary-700">{post.title}</span>
          </nav>

          <!-- Article Meta -->
          <div class="mb-8">



            <!-- Title -->
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-secondary-900 mb-6 text-balance">
              {post.title}
            </h1>

            <!-- Excerpt -->
            <p class="text-xl md:text-2xl text-secondary-600 mb-8 text-balance">
              {post.excerpt}
            </p>

            <!-- Author and Date -->
            <div class="flex items-center justify-between flex-wrap gap-4 py-6 border-t border-b border-secondary-200">
              <div class="flex items-center space-x-4">
                {post.author && (
                  <div class="flex items-center space-x-3">
                    {post.author.avatar && (
                      <img
                        src={`${post.author.avatar.fields.file.url}?w=48&h=48&fit=fill&f=face`}
                        alt={post.author.name}
                        class="w-12 h-12 rounded-full"
                        loading="lazy"
                      />
                    )}
                    <div>
                      <div class="font-medium text-secondary-900">{post.author.name}</div>
                      {post.author.bio && (
                        <div class="text-sm text-secondary-600">{post.author.bio}</div>
                      )}
                    </div>
                  </div>
                )}
              </div>
              
              <div class="text-sm text-secondary-500">
                <time datetime={post.publishedDate}>
                  Published {formatDate(post.publishedDate)}
                </time>
                {post.updatedAt !== post.createdAt && (
                  <div>
                    <time datetime={post.updatedAt}>
                      Updated {formatDate(post.updatedAt)}
                    </time>
                  </div>
                )}
              </div>
            </div>
          </div>

          <!-- Featured Image -->
          {post.featuredImage && (
            <div class="mb-12">
              <figure class="relative">
                <img
                  src={`${post.featuredImage.fields.file.url}?w=1200&h=600&fit=fill`}
                  alt={post.featuredImage.fields.title || post.title}
                  class="w-full aspect-[2/1] object-cover rounded-xl shadow-lg"
                  loading="eager"
                />
                {post.featuredImage.fields.title && post.featuredImage.fields.title !== post.title && (
                  <figcaption class="mt-3 text-sm text-secondary-600 text-center italic">
                    {post.featuredImage.fields.title}
                  </figcaption>
                )}
              </figure>
            </div>
          )}

          <!-- Article Content -->
          <div class="prose-custom max-w-none">
            <RichText content={post.content} />
          </div>

          <!-- Article Footer -->
          <div class="mt-12 pt-8 border-t border-secondary-200">
            <!-- Share buttons -->
            <div class="flex items-center justify-between flex-wrap gap-4">
              <div class="flex items-center space-x-4">
                <span class="text-sm font-medium text-secondary-700">Share this article:</span>
                <div class="flex space-x-2">
                  <a
                    href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(post.title)}&url=${encodeURIComponent(`${Astro.site}blog/${post.slug}`)}`}
                    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-secondary-100 text-secondary-600 hover:bg-primary-100 hover:text-primary-600 transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Share on Twitter"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                    </svg>
                  </a>
                  <a
                    href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`${Astro.site}blog/${post.slug}`)}`}
                    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-secondary-100 text-secondary-600 hover:bg-primary-100 hover:text-primary-600 transition-colors"
                    target="_blank"
                    rel="noopener noreferrer"
                    aria-label="Share on LinkedIn"
                  >
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                  </a>
                </div>
              </div>
              
              <a href="/blog" class="btn-outline">
                ‚Üê Back to Blog
              </a>
            </div>
          </div>
        </div>
      </div>
    </article>

    <!-- Related Posts -->
    {relatedPosts.length > 0 && (
      <section class="section-padding bg-secondary-50">
        <div class="container-custom">
          <div class="max-w-4xl mx-auto">
            <h2 class="text-2xl md:text-3xl font-bold text-secondary-900 mb-8">
              Related Articles
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {relatedPosts.map((relatedPost) => (
                <BlogCard post={relatedPost} />
              ))}
            </div>
          </div>
        </div>
      </section>
    )}
  </main>
  
  <Footer />

  <!-- JSON-LD structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />
</BaseLayout>

