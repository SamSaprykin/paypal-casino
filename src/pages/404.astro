---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Layout/Header.astro';
import Footer from '../components/Layout/Footer.astro';

const meta = {
  title: '404 - Page Not Found',
  description: 'The page you are looking for could not be found.',
  type: 'website' as const,
};
---

<BaseLayout>
  <Header />
  
  <main class="flex-1 flex items-center justify-center min-h-screen bg-gradient-to-br from-primary-50 via-white to-secondary-50">
    <div class="text-center max-w-lg mx-auto">
      <div class="mb-6">
        <h1 class="text-8xl font-bold text-secondary-900">404</h1>
        <p class="text-2xl font-semibold text-secondary-900 mt-4">Oops! Page Not Found</p>
      </div>
      <p class="text-lg text-secondary-600 mb-8">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex justify-center gap-4 mb-8">
        <a href="/" class="btn-primary px-6 py-3">Go Home</a>
      </div>
    </div>
  </main>
  
  <Footer />
</BaseLayout>

